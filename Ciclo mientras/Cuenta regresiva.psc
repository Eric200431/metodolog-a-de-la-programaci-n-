Proceso Cuenta_regresiva
	Escribir "Algoritmo:Cuenta regresiva";
	Escribir "Autor: Eric Estrada";
	Definir num Como Entero;
	Escribir "Ingresa un numero";
	Leer num;
	Esperar 1 Segundos;
	Mientras num >= 0 Hacer
	Escribir "Cuenta Regresiva" , num;
	num <- num -1;
	Esperar 1 Segundos;
	Limpiar Pantalla;
	FinMientras
	Escribir "Lanzamientoooo !!";
FinProceso
